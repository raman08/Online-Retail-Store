extends ../layouts/main-layout.pug

block styles
	link(rel="stylesheet", href="/css/forms.css")
	link(rel="stylesheet", href="/css/auth.css")

block content
	main
		if errorMessage
			- error = errorMessage
			div(class="user-message user-message--error")  #{error}

		form.login-form(action='/reset-password', method="POST")

			.form-control
				label(for="password") Password
				input(type="password", name="password")#password

			.form-control
				label(for="confirmPassword") Confirm Password
				input(type="password", name="confirmPassword")#confirmPassword

			- csrfToken = csrfToken
			input(type="hidden", name="_csrf", value=csrfToken)

			- userId = userId
			input(type="hidden", name="userId", value=userId)

			- passwordToken = passwordToken
			input(type="hidden", name="passwordToken", value=passwordToken)

			button.btn.btn-primary(type="submit") Update Password
